#:kivy 1.9.0
<Widget>:   # used for debugging -it will highlight all widgets
  canvas.after:
    Line:
      rectangle: self.x+1,self.y+1,self.width-1,self.height-1
      dash_offset: 5
      dash_length: 3

<Label>:
  font_size:18
  color: 1,1,1,1
    
<Button>:
  font_size:24
  color: 1,1,1,1

<BkColor@Widget>
  background_color: 0, 0, 0, 0
  canvas.before:
    Color:
      rgba: root.background_color
    Rectangle:
      size: self.size
      pos: self.pos

<BkLabel@Label+BkColor>
  # This will create a label that may have background color set to it
  text: "No Text"
  text_size: self.size   # this will allow text to wrap
  halign: 'center'       # center the text on button
  valign: 'center'       # center the category labels vertically
  size_hint: 1, .6
  # color: .01, .85, .77, 1  # cyan
  color: .8,.85,.3,1         # yellow
  background_color: 1,1,1,.3

