#:kivy 1.9.0
<Label>:
  font_size:18
  color: 1,1,1,1
    
<Button>:
  font_size:20
  color: 1,1,1,1

<BkColor@Widget>
  background_color: 0, 0, 0, 0
  canvas.before:
    Color:
      rgba: root.background_color
    Rectangle:
      size: self.size
      pos: self.pos

<BkLabel@Label+BkColor>
  # This will create a label that may have background color set to it
  text: "No Text"
  text_size: self.size   # this will allow text to wrap
  halign: 'center'       # center the text on button
  size_hint: 1, .6
  color: .01, .85, .77, 1
  background_color: 1,1,1,.3

<GridButton@Button>
  # this template for all buttons on the grid
  text: 'None GridButton'
  background_color: 0, 0, 1, 1
  color: 1,1,1,1
  on_release: 
    p=Factory.ClueSolPopup()
    Factory.MainWin().gridBtnClicked(self.text)
    self.text =''
